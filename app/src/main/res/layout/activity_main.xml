<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <lib.kalu.tabmenu.TabMenuLayout
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <lib.kalu.tabmenu.TabMenuView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tmv_icon_normal="@mipmap/home_normal"
            app:tmv_icon_selected="@mipmap/home_selected"
            app:tmv_text="微信"
            app:tmv_text_size="11sp"
            app:tmv_text_color_normal="#999999"
            app:tmv_text_color_selected="#46c01b" />

        <lib.kalu.tabmenu.TabMenuView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tmv_icon_normal="@mipmap/category_normal"
            app:tmv_icon_selected="@mipmap/category_selected"
            app:tmv_text="通讯录"
            app:tmv_text_size="11sp"
            app:tmv_text_color_normal="#999999"
            app:tmv_text_color_selected="#46c01b" />

        <lib.kalu.tabmenu.TabMenuView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tmv_icon_normal="@mipmap/service_normal"
            app:tmv_icon_selected="@mipmap/service_selected"
            app:tmv_text="发现"
            app:tmv_text_size="11sp"
            app:tmv_text_color_normal="#999999"
            app:tmv_text_color_selected="#46c01b" />


        <lib.kalu.tabmenu.TabMenuView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tmv_icon_normal="@mipmap/mine_normal"
            app:tmv_icon_selected="@mipmap/mine_selected"
            app:tmv_text="我"
            app:tmv_text_size="11sp"
            app:tmv_text_color_normal="#999999"
            app:tmv_text_color_selected="#46c01b" />
    </lib.kalu.tabmenu.TabMenuLayout>
</LinearLayout>